{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "JSON string",
	"Parameters": {
		"InstanceTypeParameter": {
			"Description": "Enter t2.micro or t2.small default micro",
			"Type": "String",
			"Default": "t2.micro",
			"AllowedValues": [
				"t2.micro",
				"t2.small"
			]
		},
		"KeyPairParameter": {
			"Description": "Please supply an existing key pair",
			"Type": "AWS::EC2::KeyPair::KeyName"
		},
		"YourIP": {
			"Description": "Please select a public IP address in CIDR notation",
			"Type": "String",
			"Default": "0.0.0/0",
			"AllowedPattern": "^(\\d{1,3}\\.){3}\\d{1,3}/\\d{1,2}$"
		}
	},
	"Resources": {
		"EngineeringVPC": {
			"Type": "AWS::EC2::VPC",
			"Properties": {
				"CidrBlock": "10.0.0.0/18"
			}
		},
		"PublicSubnet1": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "EngineeringVPC"
				},
				"CidrBlock": "10.0.0.0/24",
				"AvailabilityZone": "us-east-1a"
			}
		},
		"PublicSubnet2": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "EngineeringVPC"
				},
				"CidrBlock": "10.0.1.0/24",
				"AvailabilityZone": "us-east-1b"
			}
		},
		"web1": {
			"Type": "AWS::EC2::Instance",
			"InstanceType": {
				"Ref": "InstanceTypeParameter"
			},
			"KeyName": {
				"Ref": "KeyPairParameter"
			},
			"UserData": {
				"Fn::Base64": {
					"Fn::Join": [
						"#!/bin/bash",
						"yum update -y",
						"yum install -y git httpd php",
						"service httpd start",
						"chkconfig httpd on",
						"aws s3 cp s3://seis665-public/index.php /var/www/html/"
					]
				}
			}
		},
		"web2": {
			"Type": "AWS::EC2::Instance",
			"InstanceType": {
				"Ref": "InstanceTypeParameter"
			},
			"KeyName": {
				"Ref": "KeyPairParameter"
			},
			"UserData": {
				"Fn::Base64": {
					"Fn::Join": [
						"#!/bin/bash",
						"yum update -y",
						"yum install -y git httpd php",
						"service httpd start",
						"chkconfig httpd on",
						"aws s3 cp s3://seis665-public/index.php /var/www/html/"
					]
				}
			}
		},
		"WebserversSG": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupDescription": ""
			}
		},
		"SGIngress22": {
			"Type": "AWS::EC2::SecurityGroupIngress",
			"Properties": {
				"IpProtocol": "-1",
				"FromPort": 22,
				"CidrIp": {
					"Ref": "YourIP"
				},
				"SourceSecurityGroupName": {
					"Ref": "WebserversSG"
				}
			}
		},
		"SGIngress80": {
			"Type": "AWS::EC2::SecurityGroupIngress",
			"Properties": {
				"IpProtocol": "-1",
				"FromPort": 80,
				"CidrIp": "0.0.0.0/0",
				"SourceSecurityGroupName": {
					"Ref": "WebserversSg"
				}
			}
		},
		"EngineeringLB": {
			"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
			"Properties": {
				"Type": "application",
				"SecurityGroups": [
					{
						"Ref": "WebserversSg"
					}
				],
				"Subnets": [
					{
						"Ref": "PublicSubnet1"
					},
					{
						"Ref": "PublicSubnet2"
					}
				]
			}
		},
		"EngineeringWebservers": {
			"Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
			"Properties": {
				"Protocol": "HTTP",
				"Port": 80,
				"TargetType": "ip",
				"VpcId": {
					"Ref": "EngineeringVPC"
				}
			}
		},
		"Listener": {
			"Type": "AWS::ElasticLoadBalancingV2::Listener",
			"Properties": {
				"LoadBalancerArn": {
					"Ref": "EngineeringLB"
				},
				"Protocol": "HTTP",
				"Port": 80,
				"DefaultActions": [
					{
						"Type": "forward",
						"TargetGroupArn": {
							"Ref": "EngineeringWebservers"
						}
					}
				]
			}
		}
	}
}